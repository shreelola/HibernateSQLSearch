<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="org.contacts.search.ContactSearch" table="sys.contacts">
      <meta attribute="class-description">
         This class contains the contacts detail. 
      </meta>
      <id name="s_no" type="int" column="id">
         <generator class="native"/>
      </id>
      <property name="f_name" column="first_name" type="string"/>
      <property name="l_name" column="last_name" type="string"/>
      <property name="no" column="contact_no" type="int"/>
   </class>
</hibernate-mapping>